<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:id="@+id/layoutName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFirstName"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Prenom : "
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPrenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Lucas"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLastName"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Nom : "
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="Aissaoui" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAge"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Date de naissance : "
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/datePickerNaissance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="false"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:fadeScrollbars="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCompetences"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Mail : "
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextMail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="lucas@gmail.com" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNum"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Numéro : "
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName|phone"
                android:minHeight="48dp"
                android:text="0769149915" />

        </LinearLayout>

        <Space
            android:layout_width="200dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switchSport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sport" />

            <Switch
                android:id="@+id/switchMusique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Musique" />

            <Switch
                android:id="@+id/switchLecture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lecture" />

            <Switch
                android:id="@+id/switch_ski"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ski" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSoumettre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soumettre" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnTelecharger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Télécharger" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>